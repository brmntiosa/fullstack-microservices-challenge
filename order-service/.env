# App
PORT=4000

# Database (Go MySQL DSN)
# parseTime=true untuk scan TIMESTAMP ke time.Time
# loc=UTC agar waktu konsisten, timeout biar koneksi cepat fail jika down
MYSQL_DSN=app:app@tcp(mysql:3306)/appdb?parseTime=true&loc=UTC&timeout=5s

# Cache
REDIS_URL=redis://redis:6379

# Messaging
RABBIT_URL=amqp://guest:guest@rabbitmq:5672
RABBIT_EXCHANGE=orders

# Service dependency (HTTP call ke product-service)
PRODUCT_BASE_URL=http://product-service:3000
